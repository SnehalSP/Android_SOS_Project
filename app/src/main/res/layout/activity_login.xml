<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
android:background="#c4770b"
tools:context="com.example.android.message_sqlite.LoginActivity">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Username"
    android:id="@+id/login_user"
    android:textColor="#ffffff"
    android:textSize="40sp"
    android:textStyle="bold"
    android:layout_below="@+id/welcome"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25dp" />
<TextView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="You have been successfully login "
    android:id="@+id/message"
    android:textColor="#ffffff"
    android:layout_marginTop="44dp"
    android:layout_below="@+id/login_user"
    android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/buttonSend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send Message Interrupt" />

    <TextView
        android:id="@+id/welcome"
        android:text="CorTempus Welcomes you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f0c80c"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="126dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TMergency Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/buttonSend"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/lblLocation"
        android:layout_below="@+id/btnShowLocation"
        android:layout_centerHorizontal="true" />

</RelativeLayout>


